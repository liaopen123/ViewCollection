<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activitys.markdown.MarkDownActivity">

    <EditText
            android:id="@+id/et_markdown"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="111dp" />

    <Button
            android:id="@+id/btn_md2html"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转化"
            app:layout_constraintEnd_toEndOf="@+id/et_markdown"
            app:layout_constraintStart_toStartOf="@+id/et_markdown"
            app:layout_constraintTop_toBottomOf="@+id/et_markdown" />

    <WebView
            android:id="@+id/wb"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_md2html" />
</androidx.constraintlayout.widget.ConstraintLayout>